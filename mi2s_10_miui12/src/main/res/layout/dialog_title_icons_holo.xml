<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:fitsSystemWindows="true">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/alert_dialog_title_height" android:paddingStart="16dp" android:paddingEnd="16dp">
        <ImageView android:id="@+id/left_icon" android:layout_width="32dp" android:layout_height="32dp" android:scaleType="fitCenter" android:layout_marginEnd="8dp"/>
        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0" style="?attr/windowTitleStyle"/>
        <ImageView android:id="@+id/right_icon" android:layout_width="32dp" android:layout_height="32dp" android:scaleType="fitCenter" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <View android:id="@+id/titleDivider" android:background="@color/holo_blue_light" android:layout_width="match_parent" android:layout_height="1dp"/>
    <FrameLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?attr/windowContentOverlay" android:layout_weight="1">
        <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
