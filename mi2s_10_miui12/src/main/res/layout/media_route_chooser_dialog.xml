<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="?attr/dividerHorizontal" android:showDividers="middle">
    <ListView android:id="@+id/media_route_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/empty" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="64dp">
        <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/media_route_chooser_searching" android:paddingStart="16dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" style="?attr/buttonBarStyle">
        <Button android:gravity="center" android:id="@+id/media_route_extended_settings_button" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/media_route_chooser_extended_settings" style="?attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
