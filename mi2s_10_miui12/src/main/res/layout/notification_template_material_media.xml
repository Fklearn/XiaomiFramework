<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/status_bar_latest_event_content" android:tag="media" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/right_icon" android:layout_width="wrap_content" android:layout_height="match_parent" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
    <include android:layout_width="match_parent" android:layout_height="@dimen/media_notification_header_height" layout="@layout/notification_template_header"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/notification_media_content" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/notification_main_column" android:tag="media" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
            <LinearLayout android:layout_gravity="fill_vertical" android:orientation="vertical" android:id="@+id/notification_content_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/notification_min_content_height" android:layout_weight="1">
                <include layout="@layout/notification_template_part_line1"/>
                <include layout="@layout/notification_template_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/media_actions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr">
            <include android:id="@+id/action0" layout="@layout/notification_material_media_action"/>
            <include android:id="@+id/action1" layout="@layout/notification_material_media_action"/>
            <include android:id="@+id/action2" layout="@layout/notification_material_media_action"/>
        </LinearLayout>
        <ViewStub android:id="@+id/notification_media_seekbar_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    </LinearLayout>
</FrameLayout>
