    <LinearLayout android:orientation="horizontal" android:id="@+id/body" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
        <ProgressBar android:id="@+id/progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:max="10000" android:layout_marginEnd="16dp" style="?attr/progressBarStyle"/>
