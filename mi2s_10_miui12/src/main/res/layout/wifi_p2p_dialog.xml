<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/info" style="@style/wifi_section"/>
        <LinearLayout android:id="@+id/enter_pin_section" android:visibility="gone" style="@style/wifi_section">
            <LinearLayout style="@style/wifi_item">
                <TextView android:text="@string/wifi_p2p_enter_pin_message" style="@style/wifi_item_label"/>
                <EditText android:id="@+id/wifi_p2p_wps_pin" android:maxLines="8" android:singleLine="true" android:inputType="number" style="@style/wifi_item_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
